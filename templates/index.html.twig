        #indexCategorys .tags{
            position: relative;
            left: 50%;
            margin-left: -591px;
        }
        #indexCategorys{
            margin-top: 21px;
            width: 100%;
        }
    </style>
{% endblock %}
{% block body %}

<!-- 焦点图 -->
    <div id="recentFile">
    <p id="zuijin">最近文件</p>
    <div id="recentFileList">
        <div class="file"><img class="fileicon" src="{{ asset('img/fileicon/excel.svg') }}"><p>haha.excel</p> </div>
        <div class="file"><img class="fileicon" src="{{ asset('img/fileicon/excel.svg') }}"><p>haha.excel</p> </div>
